@model SourceBrowserModel
<html>
<head>
<link rel="stylesheet" href="SourceBrowser/styles/@(Model.Theme).css" />
<script src="SourceBrowser/highlight.pack.js"></script>
<script>hljs.initHighlightingOnLoad();</script>
<style>
html { height: 100%; width: 100%; }
body { margin: 0; min-height: 100%; min-width: 100%; }
body > pre { margin: 0; min-width: 100%; min-height: 100%; }
.hljs { display: inline-block !important; min-width: 100%; min-height: 100%; box-sizing: border-box; }
</style>
</head>
<body>
<pre>
<code id="code">@Model.Content</code>
</pre>
</body>
</html> 